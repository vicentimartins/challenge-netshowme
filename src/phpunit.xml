<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Tests">
            <directory suffix="Test.php">./tests</directory>
        </testsuite>
    </testsuites>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./app</directory>
            <directory suffix=".php">./database</directory>
        </include>
        <exclude>
            <file>./app/Console/Kernel.php</file>
        </exclude>
        <report>
            <text outputFile="php://stdout" showOnlySummary="true"  />
            <html outputDirectory="tests/reports" lowUpperBound="50" highLowerBound="90"/>
        </report>
    </coverage>
    <php>
        <server name="APP_ENV" value="testing"/>
        <server name="BCRYPT_ROUNDS" value="4"/>
        <server name="CACHE_DRIVER" value="array"/>
        <server name="MAIL_MAILER" value="array"/>
        <server name="QUEUE_CONNECTION" value="sync"/>
        <server name="SESSION_DRIVER" value="array"/>
        <server name="TELESCOPE_ENABLED" value="false"/>
        <server name="DB_CONNECTION" value="pgsql" />
        <server name="DB_DATABASE" value="netshowmetest" />
        <server name="DB_USERNAME" value="vicentimartins" />
        <server name="DB_PASSWORD" value="secret" />
    </php>
</phpunit>
